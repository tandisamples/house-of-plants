<h1>All Plants!</h1>
<div></div>
<form action="/orders/<%= @order.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
<ul>
  <% @items.each do |item| %>
    <li><input type="checkbox" name="item_id[]" id="<% item.id %>" value="<%= item.id %>"><%= item.title %>: <%= item.name %> - $<%= item.price %></li>

  <% end %>

</ul>  
<button type="submit" class="cool-button" style="background-color:#69BBC9">Edit Your Order</button>
</form>
</div>