<h1>All Plants!</h1>

<form action="/orders" method="POST">

  <% @items.each do |item| %>
    <li><input type="checkbox" name="item_id[]" id="<% item.id %>" value="<%= item.id %>"><%= item.title %>: <%= item.name %> - $<%= item.price %></li>

  <% end %>

  <button type="submit" class="cool-button" style="background-color:#69BBC9">Add to Order</button>
</form>